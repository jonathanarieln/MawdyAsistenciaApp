@model AuthProject.Models.LoginModel;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Login</title>
</head>
<body class="bg-light d-flex align-items-center" style="height: 100vh; margin: 0;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <form asp-controller="Access" asp-action="Login" method="post" class="bg-white p-4 border rounded">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Inicio de sesión SQL SERVER MVC</h1>
                    <div class="form-group">
                        <label for="Email">Correo</label>
                        <input type="email" id="Email" class="form-control" placeholder="Correo" asp-for="Email" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="PassWord">Contraseña</label>
                        <input type="password" id="PassWord" class="form-control" placeholder="Contraseña" asp-for="PassWord" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Iniciar sesión</button>

                    @if (ViewData["ValidateMessage"] != null)
                    {
                        <div class="alert alert-warning mt-3">
                            @ViewData["ValidateMessage"]
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</body>
</html>



